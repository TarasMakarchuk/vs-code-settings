{
	//* Workbench
	"workbench.colorTheme": "Webstorm Darcula",
	"tabnine.experimentalAutoImports": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.enabled": false,
	"workbench.editor.tabSizing": "shrink",
	// "workbench.activityBar.visible": false,

	//* Bredcrumbs
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showEnumMembers": true,
	"breadcrumbs.showConstructors": true,

	//* Editor configuration
	"editor.rulers": [110],
	"workbench.colorCustomizations": {
		"editorRuler.foreground": "#cccccc"
	},

	"editor.lineHeight": 1.6,
	"editor.fontFamily": "JetBrains Mono",
	// "editor.fontFamily": "Dark Mono,IBM Plex Mono",
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					// following will be in Italic (FlottFlott)
					"comment",
					"entity.name.type.class", // class names
					"keyword", //import, export, return
					"constant", // string, boolean, number, this, super
					"storage.modifier", // static keywords
					"storage.type.class.js" // class keywords
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					// following will be execute from italics (VSCode has some default for Italic)
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	// "editor.wordWrap": "bounded",
	"editor.suggestSelection": "first",
	"editor.detectIndentation": true,
	"editor.scrollBeyondLastLine": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.renderControlCharacters": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.quickSuggestionsDelay": 0,
	"editor.hideCursorInOverviewRuler": true,
	"editor.glyphMargin": false, // Editor fit editor's left side bar with number lines
	//* Editor appearance
	"editor.cursorBlinking": "expand",
	"editor.bracketPairColorization.enabled": true,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "visible",
	"editor.scrollbar.vertical": "visible",

	"window.openFoldersInNewWindow": "on",

	//* Explorer
	"explorer.compactFolders": false, // false union 2 folders in 1
	"explorer.confirmDragAndDrop": false,

	//* Emmet
	"emmet.triggerExpansionOnTab": true,
	"emmet.showExpandedAbbreviation": "never",
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact"
	},

	//* Debug
	"debug.toolBarLocation": "hidden",
	"debug.focusWindowOnBreak": false,
	"debug.showInlineBreakpointCandidates": false,
	"debug.showBreakpointsInOverviewRuler": false,

	//* Git
	"git.autofetch": true,
	"files.autoSave": "onFocusChange",
	"git.enableSmartCommit": true,

	"yaml.schemas": {
		"file:///c%3A/Users/User/.vscode/extensions/atlassian.atlascode-3.0.7/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
	},

	//* Format
	"prettier.semi": true,
	"prettier.useTabs": true,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": true
	},
	"prettier.arrowParens": "avoid", // delete brackets in arrow function if only one argument
	"files.associations": {
		// for correct work TailwindCSS
		"*css": "postcss",
		"*.module.scss": "postcss"
	},
	"editor.inlineSuggest.enabled": true,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},

	//* Files exclude
	"files.exclude": {
		// hide or show this files in the explorer...
		// "**/.git": true,
		// "**/.svn": true,
		// "**/.hg": true,
		// "**/CVS": true,
		// "**/.DS_Store": true,
		// "**/Thumbs.db": true,
		// "**/.expo": true,
		// "**/.expo-shared": true,
		// "**/.idea": true,
		// "**/.vscode": true,
		// "**/.next": true,
	},

	//* JS & TS
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	// "javascript.format.semicolons": "remove",
	// "typescript.format.semicolons": "remove",
	"javascript.suggest.paths": false,
	"typescript.suggest.paths": false,

	//* Spell check
	"cSpell.language": "en, ua, uk",
	"cSpell.enabled": true,
	"cSpell.userWords": ["antd", "axios", "clsx"],
	"cSpell.enableFiletypes": [
		"blade",
		"jsx",
		"tsx",
		"ts",
		"js",
		"scss",
		"sass",
		"css"
	],
	"editor.unicodeHighlight.allowedCharacters": {
		// "a": true,
		// "c": true,
		// "T": true,
		// "Ð±": true,
		// "e": true,
	},

	"window.commandCenter": true,

	"http.proxySupport": "fallback",

	"workbench.colorCustomizations": {
		"editor.background": "#181818",

		"activityBar.background": "#0f005cf7",
		"activityBar.foreground": "#ff0000",
		"activityBar.activeBackground": "#262627",
		"statusBar.background": "#242424",
		"statusBar.foreground": "#bbc4bd",
		"titleBar.activeBackground": "#06f72e",
		"titleBar.inactiveBackground": "#c4d16e",
		"menu.background": "#111111",
		"titleBar.activeForeground": "#000000",
		"editor.selectionHighlightBackground": "#b8a01950",
		"editorGroup.border": "#A4BD00",
		"editor.selectionBackground": "#02028f",

		//* Terminal settings
		"terminal.background": "#111111",
		"terminal.integrated.fontSize": 12,
		"terminal.integrated.env.windows": {},
		"terminal.integrated.tabs.enabled": false,
		"window.onload": "vscode:open-integrated-terminal", // always open VSCode with a terminal

		"sideBar.background": "#272727",

		"banner.background": "#111111",
		"breadcrumb.background": "#020169",
		"menu.border": "#020169",
		"tab.activeBackground": "#0d0070",
		"tab.activeBorder": "#ff0000",
		"tab.inactiveBackground": "#222222",
		"badge.background": "#680101",
		"badge.foreground": "#dbd7d7",
		"panel.background": "#1d1d1d",
		"scrollbarSlider.background": "#53010171",
		"scrollbarSlider.hoverBackground": "#53010171",
		"scrollbarSlider.activeBackground": "#53010171",
		"tree.tableOddRowsBackground": "#ff0000",

		"editorGutter.background": "#242424",

		"gitDecoration.modifiedResourceForeground": "#09be03",
		"gitDecoration.untrackedResourceForeground": "#06f72e",
		"gitDecoration.submoduleResourceForeground": "#4e06f7",
		"gitDecoration.ignoredResourceForeground": "#06a7f7",
		"gitDecoration.deletedResourceForeground": "#818384",
		"gitDecoration.addedResourceForeground": "#f80909",
		"gitDecoration.stageModifiedResourceForeground": "#003f02",

		"minimap.background": "#01032b",
		"editor.minimap.renderCharacters": false,
		"editor.minimap.enabled": false
	},
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.hover.enabled": false,
	"git.confirmSync": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	"editor.minimap.renderCharacters": false,
	"editor.minimap.enabled": false,

	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#FF2D00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "?",
			"color": "#3498DB",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "//",
			"color": "#474747",
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo",
			"color": "#bdff00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": true
		},
		{
			"tag": "*",
			"color": "#98C379",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	],
	"editor.fontLigatures": false,
	"editor.fontVariations": false,
	"console-ninja.featureSet": "Community",
	"terminal.integrated.env.windows": {}
}
